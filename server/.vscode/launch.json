    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 3001
        },
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "cwd": "${workspaceRoot}",
            "name": "Launch Program",
            "runtimeArgs": [
                "--nolazy"
            ],
            "program": "${workspaceRoot}\\src\\server.ts",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ]
        }
    ]
}